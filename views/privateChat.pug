extends base

block head 
    link(href='/css/privateChat.css', rel='stylesheet')
    script(src="/js/protectRoutes.js")

block content 
    div(style='margin-top: -30px;')
        #page-content.page-content.page-container
            .container-one
                .row.container-fluid
                    .col-md-3
                    .col-md-6 
                        p 
                            h4(style="color: #a1ccd6;")
                                b 
                                    i Your joined private chat with 
                                        span(style="text-transform: capitalize; color: green;") #{username}
                        .box-footer(style="margin-bottom: 2%;")
                            form.input-group#search-form(style="padding-bottom: 2px;")
                                input.form-control(type='text' id='search-field' placeholder='Search...')
                                span.input-group-btn
                                button.btn.btn-success.btn-flat(type='submit')
                                    b
                                        i SEARCH ‚ùØ    
                        .box-body#messages_container
                            .direct-chat-msg
                                div
                                    small
                                        b
                                            i Loading chats!!
                        .box-footer
                            form.send-message-form.input-group
                                input(type="text" hidden value = id id="user-id")
                                input(type="text" hidden value = username id = "user-name")
                                input.form-control(type='text' id='message' placeholder='Type Message ...')
                                span.input-group-btn
                                button.btn.btn-success.btn-flat(type='submit') Send

block js
    script(src='/js/privateChat.js' type='text/javascript')
    script(src='/js/sendPrivateChat.js' type='text/javascript')
    script(src='/js/searchPrivateMessage.js' type='text/javascript')