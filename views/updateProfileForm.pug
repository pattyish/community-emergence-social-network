extends base

block content
    div
      .row 
      .container
        h3(style="color: #a1ccd6;") User-profile update
        form(class='update-profile-form')
              span(id="message" style="display: none; text-align: center; color: red;") 
              .mb-3
                input#userId.form-control.form-control-sm(value=data.id, disabled, hidden)
              .mb-3
                label.form-label(for="username") Username*
                input#username.form-control.form-control-sm(value=data.username)
              .mb-3
                label.form-label(for="privilege") Privilege*
                select#privilege.form-select.form-control-sm(aria-label="Default select example")
                    if data.privilege == 'citizen'
                      option(selected=data.privilege) #{data.privilege}
                      option(value="administrator") Administrator  
                      option(value="coordinator") coordinator  
                    if data.privilege == 'administrator'
                      option(selected=data.privilege) #{data.privilege}
                      option(value="coordinator") coordinator
                      option(value="citizen") citizen
                    if data.privilege == 'coordinator'
                      option(selected=data.privilege) #{data.privilege}
                      option(value="administrator") administrator
                      option(value="citizen") citizen
              .mb-3
                label.form-label(for="status") Status*
                select#status.form-select.form-control-sm(aria-label="Default select example")
                    if data.status == 'active'
                      option(selected=data.status) #{data.status}
                      option(value="inactive") inactive
                    else
                      option(selected=data.status) #{data.status}
                      option(value="active") active
              .mb-3
              .form-check
                input#CheckBox(type="checkbox", name="CheckBox")
                small(class="m-2") Change password
              .mb-3(style="display: none;", id="password_area")
                label.form-label(for="password") Password*                
                input#password.form-control.form-control-sm(placeholder="Enter a new Password", name="password")
                
                #emailHelp.form-text * required field.

              div(style="text-align: center")
                      button#submit-btn.btn.btn-primary(type='submit') Submit Update

block js   
    script(src='/js/oncheckPassword.js', type='text/javascript')
    script(src='/js/updateProfileForUser.js', type='text/javascript')